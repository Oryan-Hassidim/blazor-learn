{
    "navigationFallback": {
        "rewrite": "index.html",
        "exclude": [
            "/_framework/*",
            "/css/*"
        ]
    },
    "auth": {
        "rolesSource": "/api/roles",
        "identityProviders": {
            "azureActiveDirectory": {
                "userDetailsClaim": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name",
                "registration": {
                    "openIdIssuer": "https://login.microsoftonline.com/228940e3-750b-44ac-b085-ea34d13351b5",
                    "clientIdSettingName": "AAD_CLIENT_ID",
                    "clientSecretSettingName": "AAD_CLIENT_SECRET"
                },
                "login": {
                    "loginParameters": [
                        "resource=https://graph.microsoft.com"
                    ]
                }
            }
        }
    },
    "routes": [
        {
            "route": "/.auth/login/twitter",
            "statusCode": 404
        },
        {
            "route": "/.auth/login/github",
            "statusCode": 404
        },
        {
            "route": "/admin/*",
            "allowedRoles": [ "admin" ]
        },
        {
            "route": "/api/products*",
            "methods": [ "PUT" ],
            "allowedRoles": [ "admin" ]
        }
    ]
}